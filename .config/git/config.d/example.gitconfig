# vim: ft=gitconfig cms=#\ %s

[core]
    sshCommand = ssh -o IdentitiesOnly=yes -i ~/.ssh/id_ed25519

[user]
    name       = example
    email      = m@example.com
    signingKey = ~/.ssh/id_ed25519.pub

[credential "https://github.com/"]
    username = example

[gpg]
    format = ssh
[gpg "ssh"]
    allowedSignersFile = allowed_signers
[commit]
    gpgSign = true
[tag]
    gpgSign = true
