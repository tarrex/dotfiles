{
    "coc.preferences.enableMarkdown": true,
    "coc.preferences.extensionUpdateCheck": "never",
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "html",
        "css",
        "scss",
        "javascript",
        "typescript",
        "json",
        "yaml",
        "markdown"
    ],
    "coc.preferences.rootPatterns": [
        ".root",
        ".git",
        ".svn",
        ".hg",
        ".project",
        "Cargo.toml",
        "go.mod",
        "Makefile",
        "tsconfig.js",
        "jsconfig.js"
    ],
    "coc.preferences.snippets.enable": false,

    "diagnostic.enable": false,
    "diagnostic.displayByAle": true,

    "suggest.asciiCharactersOnly": true,
    "suggest.autoTrigger": "always",
    "suggest.maxCompleteItemCount": 20,
    "suggest.minTriggerInputLength": 2,

    "yaml.format.enable": true,
    "yaml.format.singleQuote": true,
    "yaml.schemas": {
        "kubernetes": "/*.y?(a)ml"
    },

    "toml.formatter.reorderKeys": false,

    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "all",
    "prettier.ignorePath": ".gitignore",

    "rust-analyzer.diagnostics.enable": false,
    "rust-analyzer.notifications.cargoTomlNotFound": false,
    "rust-analyzer.checkOnSave.enable": false,
    "rust-analyzer.lens.enable": false,

    "clangd.semanticHighlighting": true,
    "clangd.arguments": ["--background-index"],

    "languageserver": {
        "golang": {
            "command": "gopls",
            "filetypes": ["go"],
            "rootPatterns": ["go.mod", ".git", "Makefile"],
            "initializationOptions": {
                "usePlaceholders": false,
                "completeUnimported": true
            }
        }
    }
}
