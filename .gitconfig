[user]
    name = tarrex
    email = tarrexchen@gmail.com
[gist]
    private = yes
[github]
    user = tarrex
[core]
    editor = vim
    pager = less -FRX
    excludesFile = ~/.gitignore
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    ff = only
    # conflictstyle = diff3
[commit]
    gpgSign = false
    template = ~/.gitmessage
[push]
    default = simple
    followTags = true
[status]
    showUntrackedFiles = all
[transfer]
    fsckobjects = true
[alias]
    prune = fetch --prune
    undo = reset --soft HEAD^
    unstage = reset HEAD --
    stash-all = stash save --include-untracked
    glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    stat = !git --no-pager diff --stat
    sweep = !git branch --merged master | grep -v 'master$' | xargs git branch -d && git remote prune origin
    serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[color "branch"]
    current = yellow
    local = green
    remote = cyan
    upstream = magenta
    plain = red
[color "diff"]
    context = cyan
    meta = yellow
    frag = magenta
    old = red
    new = green
    commit = white
    whitespace = red reverse
[color "status"]
    added = green
    changed = yellow
    untracked = red
[rerere]
    enabled = 1
    autoupdate = 1
[help]
    autocorrect = 1
